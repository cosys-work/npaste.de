    hs-source-dirs: src
    ghc-options: -Wall

    build-depends:
        base                    == 4.*,
        bytestring              == 0.9.*,
        containers              == 0.4.*,
        mtl                     == 2.*,
        old-time                == 1.*,
        utf8-light              == 0.4.*,
        parsec                  == 3.*,
        happstack-auth          == 0.1,
        happstack               == 6.*,
        happstack-data          == 6.*,
        happstack-ixset         == 6.*,
        happstack-server        == 6.*,
        happstack-state         == 6.*,
        happstack-util          == 6.*

    exposed-modules:
        App.State
        Paste.State
        Users.State
